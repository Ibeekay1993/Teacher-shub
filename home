                        "1st Quarter Over 10.5 Points (2.00)"
                    ]
                }
            ]
        };

        function getRandomTip(sport) {
            const sportTips = tips[sport];
            let tipsHTML = '';

            sportTips.forEach((tip) => {
                const [homeTeam, awayTeam] = tip.match.split(' vs ');
                const bettingOptionsHTML = tip.bettingOptions.map(option => `<div class="bet-option">${option}</div>`).join('');

                tipsHTML += `
                    <div class="tip-details">
                        <div class="competition-info">${tip.date} | ${tip.competition}</div>
                        <div class="match-info">
                            <div class="team">
                                <i class="${tip.icons.home}"></i>
                                <span class="team-name">${homeTeam}</span>
                                ${tip.flags.home}
                            </div>
                            <span>vs</span>
                            <div class="team">
                                <i class="${tip.icons.away}"></i>
                                <span class="team-name">${awayTeam}</span>
                                ${tip.flags.away}
                            </div>
                        </div>
                        ${bettingOptionsHTML}
                    </div>
                `;
            });

            tipElement.innerHTML = tipsHTML;
            tipContainer.classList.add('fade-in');
            setTimeout(() => tipContainer.classList.remove('fade-in'), 500);
        }

        function updateDate() {
            const now = new Date();
            dateElement.textContent = now.toDateString();
        }

        // Event listener to update tips automatically when the sport selection changes
        sportSelect.addEventListener('change', () => {
            getRandomTip(sportSelect.value);
            updateDate();
        });

        // Initial load
        getRandomTip('soccer');
        updateDate();

        newTipBtn.addEventListener('click', () => {
            getRandomTip(sportSelect.value);
            updateDate();
        });
    </script>
